---
import Layout from "../layouts/Layout.astro";
import Rater from "../components/Rater";
import { ratings } from "../base";
import HeaderLogo from "../components/HeaderLogo.astro";
import KinkCheck from "../components/KinkCheck";
---

<Layout>
	<header>
		<HeaderLogo />
		<div class="ratings">
			{
				ratings.map(([n], i) => (
					<Rater text={n} rating={i} className="rater noclick" />
				))
			}
		</div>
	</header>
	<!-- TODO: some explainations, of the functioning and of how the kinks should be interpreted -->
	<!-- TODO: add a name field -->
	<KinkCheck client:load />
</Layout>

<style is:global>
	body {
		min-width: 450px;
	}
	table {
		border: 1px solid #303030;
		border-collapse: collapse;
	}
	tr {
		border: 1px solid #303030;
	}
	td {
		padding-left: 8px;
		padding-top: 2px;
		padding-bottom: 2px;
	}
	h2 {
		margin-bottom: 6px;
		margin-top: 9px;
	}
	h1 {
		width: 20ch;
	}
	header {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}
	.ratings {
		width: calc(600% / 7);
		display: flex;
		justify-content: space-evenly;
		flex-wrap: wrap;
		align-items: center;
	}
	@media screen and (max-width: 800px) {
		.ratings {
			justify-content: space-between;
		}
		.category,
		table {
			width: 100%;
		}
	}
	main {
		display: flex;
		flex-flow: row wrap;
		justify-content: space-evenly;
		column-gap: 2ch;
	}
	.category {
		min-width: 28%;
	}
	.rater,
	table {
		font-size: 16pt;
	}
	.rater {
		height: 16pt;
		display: flex;
		flex-direction: row;
		cursor: pointer;
		-webkit-user-select: none;
		user-select: none;
	}
	.rater button {
		width: 16pt;
		height: 16pt;
		border: none;
		cursor: pointer;
		margin-right: 4px;
	}
	.noclick,
	.noclick button {
		cursor: auto;
		-webkit-user-select: auto;
		user-select: auto;
	}
</style>
